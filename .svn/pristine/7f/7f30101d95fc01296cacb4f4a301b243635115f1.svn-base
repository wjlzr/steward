                                if (o.code == 200) {
                                    layer.msg(o.message, {icon: 1, time: 1000});
                                } else {
                                    layer.msg('操作失败', {icon: 2, time: 1000});
                                }
                            }
                        });
                    });

                }

            });
            add_check();

            $('#business_start_time_0, #business_end_time_0').timepicker({
                timeFormat: 'HH:mm',
                showHour: true,
                showMinute: true
            });
        });

