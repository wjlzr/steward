                        'date_type':data_type
                    } ,
                    success : function (obj){
                        if (obj.code == 200) {
                            $('.total_sales').html(obj.data.total_sales.current);
                            $('.yes_total_sales').find('span').eq(0).html(obj.data.total_sales.mom);
