a {
    text-decoration: none;
    color: #000
}
* {
    margin: 0;
    padding: 0
}
/*login*/
.login-header{
    width: 1260px;
    height: 80px;
    margin: 0 auto;
    background: #fff;
}
.login-header .login-logo {
    float: left;
}
.login-logo img{
    display: block;
    margin-top: 10px;
}
.login-right{
    float: right;
    margin-top: 30px;
}
.login-right a {
    border-radius: 2px;
    color: #00a0ea;
    border: 1px solid;
    margin-left: 10px;
}
.login-right a.m-client {
    padding: 7px 20px 7px 40px;
    background: url("/images/admin/log-phone.png") no-repeat 19px center;
}
.login-right a.pc-client {
    padding: 7px 20px 7px 45px;
    background: url("/images/admin/log-pc.png") no-repeat 18px center;
}

.login-banner{
    width: 100%;
    height:470px;
    background: #00a0ea;
}
.banner-inner {
    width: 1260px;
    height: 100%;
    margin: 0 auto;
    background: url('/images/admin/banner-1.png') no-repeat 100px 50px;
    background-size: 430px auto;
}
.login-banner .item-box{
    width: 350px;
    float: right;
}
.login-box{
    width: 100%;
    background: #fff;
    border-radius: 5px;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    margin: 60px 0;
    padding: 30px 0;
}
.login-box .login-title{
    text-align: center;
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 30px;
}
.input-box{
    margin: 0 10% 15px;
    position: relative;
    border:1px solid #fff;
}
.input-box input {
    width: 100%;
    height: 38px;
    padding: 10px;
    -webkit-box-sizing: border-box;
    -moz-box-sizing: border-box;
    box-sizing: border-box;
    line-height: 18px;
    text-indent: 5px;
    border-radius: 2px;
    border: 1px solid #ddd;
}
:-moz-placeholder { /* Mozilla Firefox 4 to 18 */
    color: #ccc;opacity: 1;
}
::-moz-placeholder { /* Mozilla Firefox 19+ */
    color: #ccc;opacity: 1;
}
:-ms-input-placeholder{
    color: #ccc;opacity: 1;
}
::-webkit-input-placeholder{
    color: #ccc;opacity: 1;
}
.input-box.yzm{
    height: 40px;
}
.input-box input.yzm-input {
    width: 55%;
    float: left;
    zoom:1;
    display: inline;
    *position: absolute;
    *left:0;
}
.yzm-img{
    float: right;
    position: absolute;
    top: 0;
    right: 0;
    width: 43%;
    height: 36px;
}
.yzm-img img{
    width:100%;
    height: 36px;
}
.input-box p{
    display: inline-block;
    margin-right: 23px;
    zoom:1;
    display: inline;
}
.input-box p input {
    display: inline-block;
    width: 14px;
    height: 14px;
    background: 0;
    position: relative;
    top: 2px;
    margin-right:5px;
    outline: none;
    border-radius: 0;
    zoom:1;
    display: inline;
    *top:-2px;
}
.forget-link{
    color: #ff5400;
    float: right;
    position: absolute;
    top: 0;
    right: 0;
}
.btn-login{
    height: 39px;
    width: 80%;
    margin: 0 10%;
    background: #00a0ea;
    border: 0;
    color: #fff;
    font-weight: bold;
    border-radius: 4px;
    cursor: pointer;
}
.fot{
    color: #999;
    text-align: center;
    margin-top: 35px;
}
.fot p {
    margin-bottom: 5px;
}
.fot p span {
    margin-left: 50px;
}