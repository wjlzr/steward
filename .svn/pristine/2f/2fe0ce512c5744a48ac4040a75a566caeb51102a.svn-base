a {
    text-decoration: none;
    color: #000
}
* {
    margin: 0;
    padding: 0
}
/*login*/
.login-header{
    background: #fff;
    height: 90px;
}
.login-logo img{
    line-height: 90px;
    margin: 13px 0 0 10px
}
.login-right{
    position: absolute;
    right: 10px;
    top: 0;
    line-height: 90px;
}
.login-right a img{
    position: relative;
    top: 5px;
}
.login-banner{
    width: 100%;
    padding: 0 35px;
    height:500px;
    background: #5f8af7 url('/images/admin/banner.png') no-repeat 19% bottom;
}
.login-banner .item-box{
    width: 350px;
    position: absolute;
    right: 33px;
}
.login-box{
    width: 100%;
    background: #fff;
    border-radius: 5px;
    -webkit-border-radius: 5px;
    -moz-border-radius: 5px;
    margin: 75px 0;
    padding: 30px 0;
}
.login-box .login-title{
    text-align: center;
    font-size: 16px;
    font-weight: bold;
    margin-bottom: 30px;
}
.input-box{
    margin: 0 10% 15px;
    position: relative;
    border:1px solid #fff;
}
.input-box input {
    border: 1px solid #ccc;
    height: 38px;
    width: 100%;
    text-indent: 5px;
    line-height:38px;
}
.input-box.yzm{
    height: 40px;
}
.input-box input.yzm-input {
    width: 55%;
    float: left;
    zoom:1;
    display: inline;
    *position: absolute;
    *left:0;
}
.yzm-img{
    float: right;
    position: absolute;
    top: 0;
    right: 0;
    width: 43%;
    height: 36px;
}
.yzm-img img{
    width:100%;
    height: 36px;
}
.input-box p{
    display: inline-block;
    margin-right: 23px;
    zoom:1;
    display: inline;
}
.input-box p input {
    display: inline-block;
    width: 14px;
    height: 14px;
    background: 0;
    position: relative;
    top: 2px;
    margin-right:5px;
    outline: none;
    border-radius: 0;
    zoom:1;
    display: inline;
    *top:-2px;
}
.forget-link{
    color: #ff5400;
    float: right;
    position: absolute;
    top: 0;
    right: 0;
}
.btn-login{
    height: 39px;
    width: 80%;
    margin: 0 10%;
    background: #5f8af7;
    border: 0;
    color: #fff;
    font-weight: bold;
}
.fot{
    color: #999;
    text-align: center;
    margin-top: 40px;
}



