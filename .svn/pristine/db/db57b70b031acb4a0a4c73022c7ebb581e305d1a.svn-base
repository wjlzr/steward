                        } else {
                            layer.alert(o.message,{icon:2,offset:'50px'});
                        }

                    }
                });
            }

        };

        /*获取对象、数组的长度、元素个数
         *obj 要计算长度的元素，可以为object、array、string
         */
        function count(obj){
            var objType = typeof obj;
            if(objType == "string"){
                return obj.length;
            }else if(objType == "object"){
                var objLen = 0;
                for(var i in obj){
                    objLen++;
                }
                return objLen;
            }
            return false;
        }

