            getdata:function(){

                var dt = E.getFormValues('search_form');

                if (dt.startDate == '') {
                    layer.alert('开始时间不能为空，请选择', {icon: 2, offset: '70px'});
                    return false;
                }

                if (dt.endDate == '') {
