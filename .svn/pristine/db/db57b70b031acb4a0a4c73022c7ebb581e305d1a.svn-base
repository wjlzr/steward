                                        html += '<td class="width35">';
                                        html += '<span class="fl" style="margin-right: 10px;">'+ v.num_1 +'</span>';
                                        if ( t != '全部' ) {
                                            html += '<div class="progress">';
                                            html += '<div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: '+ v.rate_1 +';color: #0f0f0f;background:#fd9501;">'+ v.rate_1 +'</div>';
