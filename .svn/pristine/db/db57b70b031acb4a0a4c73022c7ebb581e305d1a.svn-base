                    layer.alert('开始时间不能为空，请选择', {icon: 2, offset: '70px'});
                    return false;
                }

                if (dt.endDate == '') {
                    layer.alert('结束时间不能为空，请选择', {icon: 2, offset: '70px'});
                    return false;
