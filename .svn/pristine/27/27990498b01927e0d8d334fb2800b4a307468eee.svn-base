    <script type="text/javascript">

        //分类查询
        var mid_category = eval( {!! $second_level or '' !!} ) ;
        var small_category = eval( {!! $third_level or '' !!} );

        $(document).on('change' , '#big_category' , function () {  //二级分类

            $('#mid_category').find('option:not(":first")').remove() ;

            if( this.value > 0 && mid_category[ this.value ] != undefined  ) {

                var html = '' ;
                $.each( mid_category , function ( k ,v ) {
                    html += '<option value="'+ v.second_level_id +'">'+ v.second_level_name +'</option>' ;
                }) ;

                $('#mid_category').append( html ) ;
                $('#mid_category').show() ;
                $('#small_category').hide() ;

            } else {
                $('#mid_category').hide() ;
                $('#small_category').hide() ;
            }

        }).on('change' , '#mid_category' , function () { //三级分类

            $('#small_category').find('option:not(":first")').remove() ;

            if( this.value > 0 && small_category[ this.value ] != undefined ) {

                var html = '' ;
                $.each( small_category , function ( k ,v ) {
                    html += '<option value="'+ v.third_level_id +'">'+ v.third_level_name +'</option>' ;
                }) ;

                $('#small_category').append( html ) ;
                $('#small_category').show() ;

            } else {
                $('#small_category').hide() ;
            }

        });

        var stat = {

            //时间切换
            timeclick: function (source) {

                if ( source == 1 ) {
                    $("#change_"+source).addClass('selected').siblings().removeClass("selected");
                    A.analyse.getQuickTime('startDate','endDate',source);
                    die();
                }

                switch (source){

                    case 2:
                    case 3:
                    case 4:
                    case 5:
                        $("#change_"+source).addClass('selected').siblings().removeClass("selected");
                        A.analyse.getQuickTime('startDate','endDate',source);
                        break;

                    case 6:
                        $('#change_2,#change_3,#change_4').removeClass("selected");
                        break;
                }

            },

            statExport:function () {

                var exportIndex = 1127;

                layer.confirm( '您确定导出商品类别分析信息吗?' ,{icon:3,offset:'50px'}, function( index ) {
                    layer.close(index);
                    com_export.download('search_form', '/admin/goods/category/export',exportIndex );
                });
            },

            reset:function () {
                $('#big_category').val('');
                $('#mid_category').val('') ;
                $('#mid_category').hide() ;
                $('#small_category').val('') ;
                $('#small_category').hide() ;
                $('#app_id').val('');
                $('#mall_id').val('');
                stat.timeclick(3);
            }

        };

        //初始化
        stat.timeclick(3);

    </script>
    <script>

        layui.use(['laydate','form'],function () {
            var laydate = layui.laydate;
            var form = layui.form;

            laydate.render({
                elem:'#startDate'
            });

            laydate.render({
                elem:'#endDate'
            });
        });

        var table;

        $(document).on('click', '.search', function () {
            layui_table_reload();
        }).on('click', '#re-set', function () {
            stat.reset();
            layui_table_reload();
        }).on('click', '.layer-go-back', function () {
            E.layerClose();
        });

        function layui_table(params) {

            layui.use('table', function () {

                table = layui.table;
                var dt = E.getFormValues('search_form');
                //服务端获取不到插件传值，将排序信息赋值给where条件
                dt.sort = params.sort_name;
                dt.order = params.sort_order;

                var render = {
                    elem: '#table',
                    id:'layui-table',
//                    height: 400,
                    limit: 10,
                    url: layui_table_ajax_url,
                    page: true,
                    initSort:{
                        field:params.sort_name,
                        type:params.sort_order
                    },
                    where:dt,
                    cols: params.cols,
                    done: function() {
                    }
                };
                for(var key in params) {
                    if (key != 'initSort') {
                        render[key] = params[key];
                    }
                }

                table.render(render);
                table.on('sort(operatingTable)', function(obj){ //注：tool是工具条事件名，test是table原始容器的属性 lay-filter="对应的值"
                    dt.sort = obj.field;
                    dt.order = obj.type;

                    //尽管我们的 table 自带排序功能，但并没有请求服务端。
                    //有些时候，你可能需要根据当前排序的字段，重新向服务端发送请求，从而实现服务端排序，如：
                    table.reload('layui-table', {
                        initSort: obj //记录初始排序，如果不设的话，将无法标记表头的排序状态。 layui 2.1.1 新增参数
                        ,where:dt//请求参数（注意：这里面的参数可任意定义，并非下面固定的格式
                        ,   page:{
                            curr:1
                        }
                    });
                });
            });

        }

        function layui_table_reload() {

            var dt = E.getFormValues('search_form');

            table.reload('layui-table', {
                where:dt,
                page:{
                    curr:1
                },
                initSort:{
                    field:'total_bill_money',
                    type:'desc'
                }
            });
        }

        var layui_table_ajax_url = '/admin/goods/category/list';

        layui_table({
            sort_name : 'total_bill_money',
            sort_order : 'desc',
            method : 'get',
            cols: [[
                {title: "序号", field : "Number", width: '6%', align: "center", templet:function (d) {
                    return d.LAY_INDEX; //序号：d.LAY_INDEX
                }},
                {title: "分类", field : "level", width: '22%', align: "center"},
                {title: "销售额(元)", field : "total_bill_money", width: '13%',align:"center",sort : true},
                @if( isset( $app_data ) && !empty( $app_data ) )
                @foreach( $app_data as $app )
                {title: "{{$app['name']}}(元)",field : "{{$app['alias']}}", width: '15%',align:"center"},
                @endforeach
                @endif
            ]]
        });

    </script>
