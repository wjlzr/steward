    /**
     * 获取商品列表信息
     * @param $args_data
     * @return mixed
     */
    public function get_shop_product($args_data)
    {

        $query_page = array();

        if (!isset($args_data['mall_id']) || empty($args_data['mall_id'])) {
            return $this->curl->response('店铺id不能为空');
        }

        $st_app_mall = StAppMall::where('mall_id', $args_data['mall_id'])->first();
