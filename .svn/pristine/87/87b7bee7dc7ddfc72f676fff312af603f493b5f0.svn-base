            }

            if( $form_value[0]['enable_number'] != $st_goods_stock -> enable_number ){

                StGoodsStock::where([['mall_id',$mall_id],['sku',$st_app_goods_sale -> sku]])->update(['enable_number' => $form_value[0]['enable_number']]);

