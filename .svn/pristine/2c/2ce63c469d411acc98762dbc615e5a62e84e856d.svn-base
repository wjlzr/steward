    <script>
        $('.square-radio').iCheck({
            checkboxClass: 'icheckbox_square-blue',
            radioClass: 'iradio_square-blue',
            increaseArea: '20%' // optional
        });

        //营业时间
        $('#business_start_time_0, #business_end_time_0').timepicker({
            timeFormat: 'HH:mm',
            showHour: true,
            showMinute: true
        });

        //营业时间
        var id = 0 ;

        $(document).on('click', '.time-add', function () {

            id ++ ;

            var html = '';
            html += '<div class="time">';
            html += '<div class="form-group">';
            html += '<label class="radio-inline col-sm-2" style="margin-left: 180px">';
            html += '<input type="text" class="form-control" readonly placeholder="营业开始时间"  name="business_start_time" id="business_start_time_'+ id +'" value="" />';
            html += '</label>';
            html += '<label class="radio-inline control-label pull-left" style="margin-left: 0px; padding-left: 0px;padding-top: 15px;">～</label>';
            html += '<label class="radio-inline col-sm-2" style="margin-left: 0px; padding-left: 15px;">'
            html += '<input type="text" class="form-control" readonly placeholder="营业结束时间"  name="business_end_time" id="business_end_time_'+ id +'" value="" />';
            html += '</label>';
            html += '<span class="time-del"><img src="/images/admin/toggle-up.png" alt="">&nbsp; <a href="javascript:void(0)">移除时间段</a></span>';
            html += '</div>';
            html += '</div>';
            $('.time-list').append(html);

            $('#business_start_time_'+ id +', #business_end_time_'+ id +'').timepicker({
                timeFormat: 'HH:mm',
                showHour: true,
                showMinute: true
            });
        }).on('click','.time-del',function () {
            $(this).parent(2).remove();
        });

        $(function () {
            var region_data = JSON.parse('{!! $region_data !!}');

            if (region_data.length != 0) {
                $.each(region_data,function(k,v){
                    $('#province_list').append('<option value="' + v.provinceID + '">' + v.Name + '</option>')
                });
            }

            $(document).on('change', '#province_list', function () {

                $('#city_list').html('<option value="0">请选择</option>').hide();
                $('#county_list').html('<option value="0">请选择</option>').hide();

                var id = $(this).val();

                if (id > 0) {

                    if( !$.isEmptyObject(region_data[id]['mid'])){

                        var mid_categry_data = region_data[id]['mid'];
                        $.each(mid_categry_data, function (k, v) {
                            $('#city_list').append('<option value="' + v.cityID + '">' + v.Name + '</option>');
                        });

                        $('#city_list').show();
                    }

                }

            }).on('change', '#city_list', function () {

                $('#county_list').html('<option value="0">请选择</option>').hide();

                var id = $(this).val();

                if (id > 0) {

                    var big_id = $('#province_list').val();

                    if( !$.isEmptyObject(region_data[big_id]['mid'][id]['small'])){

                        //小分类数据
                        var small_categry_data = region_data[big_id]['mid'][id]['small'];

                        $.each(small_categry_data, function (k, v) {
                            $('#county_list').append('<option value="' + v.countyID + '">' + v.Name + '</option>');
                        });
                        $('#county_list').show();

                    }

                }

            });
        })

        function save() {
            var dt = E.getFormValues('mall-form');
            console.log(dt);
            layer.confirm('您确认要保存门店吗？', {icon: 3, offset: '50px'}, function (index) {

                layer.close(index);

                E.ajax({
                    type: 'get',
                    url: '/admin/mall/save',
                    data: dt,
                    success: function (o) {
                        if (o.code == 200) {
                            layer.msg(o.message, {icon: 1, time: 1000});
                            bootstrap_table_init();
                        } else {
                            layer.msg(o.message, {icon: 2, time: 1000});
                        }
                    }
                });
            })

        }


    </script>


