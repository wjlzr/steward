/*公共*/
a {
    text-decoration: none;
    color: #000
}
* {
    margin: 0;
    padding: 0
}
/*订单*/
.word-color{
    color: #5f8af7;
}
.top-jilu{
    padding: 0 20px;
}
.order-list li{
    border-bottom: 1px solid #eee;
    margin-top:16px;
    cursor: pointer;
}
.order-list li:hover{
    background:#fbfbfb;
}
.order-list li .order-status {
    background: #fbfbfb;
    line-height: 50px;
    padding: 0 20px;
    height: 50px;
    margin-bottom: 5px;
}
.order-top-left{
    white-space: nowrap;
    overflow: hidden;
    float: left;
    width: 80%;
    text-overflow: ellipsis;
}
.order-top-left span{
    display: inline-block;
    zoom:1;
    *display: inline;
    margin-right:5px;
}
.order-top-left p.text{
    display: inline-block;
    margin: 0 10px;
    zoom:1;
    *display: inline;
}
.order-top-left p.text .order-no{
    font-style: normal;
    color: #6598f1;
}
.order-top-right{
    float: right;
}
.order-info{
    padding: 10px 20px;
    overflow: hidden;
    zoom:1
}
.left-info{
    float: left;
}
.right-info{
    float: right;
    height: auto;
    margin-top: 10px;
    text-align: right;
}
.right-info .order-fee span{
    margin-left: 1em;
}
.right-info .shop-number {
    padding-right: 3em;
}
.right-info>button{
    margin-left:23px;
}
.left-info p{
    font-size: 16px;
    margin: 6px 0;
}
.left-info p span{
    margin-right: 10px;
}

.left-info p .order-num{
    font-size: 12px;
    color: #6598f1;
}
.left-info .focus-th{
    font-size: 14px;
    color: #898787;
}
.left-info .notice{
    font-size: 14px;
    color: #828080;
    background: #fbfbfb;
    display: inline-block;
    line-height: 24px;
    padding: 0 40px 0 0;
    *zoom:1;
    *display: inline;
}
.left-info .order-copy{
    color: #6598f1;
}
.right-info>div{
    line-height: 40px;
    height:40px;
}
.right-info .payment span{
    color: #6598f1;
}
.submit-btn{
    margin-top: 25px;
    zoom:1;
    float: right;
}
.submit-btn select{
    position: relative;
    zoom:1;
    margin-left:23px;
    *left:23px;
}
select{
    position:relative;
    top:2px;
}
.submit-btn .reminder{
    margin-top:5px !important;
}
.submit-btn .refund{
    margin-top: 10px !important;
    width: auto;
}
.submit-btn button{
    *vertical-align: baseline;
    margin-left:23px;
}

.btn-color{
    border: 1px solid #5f8af7;
    color: #5f8af7;
}
.position-page{
    margin:10px 0;
}
@media only screen and (max-width: 800px){
    .left-info{  float: none; width: 100%;  }
}
.order-operation-btn-color-class {
    border-color: #1c7fe3;
    color : #1c7fe3;
}

